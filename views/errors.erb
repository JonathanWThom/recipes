<h3>Oops, there were some errors: </h3>
<% if @recipe %>
  <ul>
    <% @recipe.errors().full_messages().each() do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<% if @category %>
  <ul>
    <% @category.errors().full_messages().each() do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<% if @ingredient %>
  <ul>
    <% @ingredient.errors().full_messages().each() do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

