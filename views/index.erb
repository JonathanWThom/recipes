<div class="row">
  <div class="col-md-4">
    <form action="/categories" method="post">
      <label for="new_category">Add a new Category</label>
      <div class="form-group">
        <input class='form-control' id='category_name' name="category_name" placeholder="Name">
      </div>
      <button type="submit" class="btn btn-warning">Add Category</button>
    </form>
  </div>
  <div class="col-md-4">
    <form action="/recipes" method="post">
      <label for="new_recipe">Add a new Recipe</label>
      <div class="form-group">
        <input class='form-control' id='name' name="name" placeholder="Dish">
      </div>
      <div class="form-group">
        <input class='form-control' id='instructions' name="instructions" placeholder="Instructions">
      </div>
      <button type="submit" class="btn btn-warning">Add Recipe</button>
    </form>
  </div>
  <div class="col-md-4">
    <form action="/ingredients" method="post">
      <label for="new_recipe">Add a new Ingredient</label>
      <div class="form-group">
        <input class='form-control' id='ingredient_name' name="ingredient_name" placeholder="Ingredient Name">
      </div>
      <button type="submit" class="btn btn-warning">Add Ingredient</button>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <h3>These are all of your Categories</h3>
    <ul>
      <% @categories.each() do |category| %>
      <li><a href='/categories/<%= category.id() %>'><%= category.name() %></a></li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-4">
    <h3>These are all of your Recipes</h3>
    <form action="/sort">
      <button type="submit" class='btn btn-primary'>Sort by Rating</button>
    </form>
    <ul>
      <% @recipes.each() do |recipe| %>
      <li>
        <a href='/recipes/<%= recipe.id() %>'>
          <%= recipe.name() %>
        <% if recipe.rating %>
          (<%= recipe.rating %> Stars)
        <% else %>
          (No Rating)
        <% end %>
        </a>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-4">
    <h3>These are all of your Ingredients</h3>
    <ul>
      <% @ingredients.each() do |ingredient| %>
        <li><a href='/ingredients/<%= ingredient.id() %>'><%= ingredient.name() %></a></li>
      <% end %>
    </ul>
  </div>
</div>
